<script>
  // Video Stories - Play/Pause on click
  document.querySelectorAll('.video-story').forEach(story => {
    const video = story.querySelector('video') as HTMLVideoElement;
    const overlay = story.querySelector('.play-overlay') as HTMLElement;

    story.addEventListener('click', () => {
      if (video.paused) {
        // Pause all other videos first
        document.querySelectorAll('.video-story video').forEach(v => {
          const vid = v as HTMLVideoElement;
          const parent = vid.closest('.video-story');
          const ov = parent?.querySelector('.play-overlay') as HTMLElement;
          if (vid !== video) {
            vid.pause();
            vid.muted = true;
            if (ov) ov.style.opacity = '1';
          }
        });

        video.currentTime = 0;
        video.muted = false;
        video.play();
        overlay.style.opacity = '0';
      } else {
        video.pause();
        overlay.style.opacity = '1';
      }
    });

    // Show overlay when video ends
    video.addEventListener('ended', () => {
      overlay.style.opacity = '1';
    });
  });
</script>
