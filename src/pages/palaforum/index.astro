---
import Layout from '../../layouts/Layout.astro';
import EventCard from '../../components/EventCard.astro';
import { getUpcomingByVenue } from '../../lib/events';

const upcomingEvents = await getUpcomingByVenue('palaforum');
const displayEvents = upcomingEvents.slice(0, 3);
---

<Layout title="Palaforum Giuseppe Bellavia" description="Palaforum Giuseppe Bellavia - Un vero gioiello per chi ama arte e spettacolo. Acustica eccellente, attrezzature professionali e massimo comfort ad Agrigento.">
  <!-- Hero Section -->
  <section class="relative min-h-[80vh] flex items-end overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img
        src="/images/palaforum-gallery/reepyk-208628.jpg"
        alt="Palaforum Giuseppe Bellavia"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-arena-black via-arena-black/70 to-arena-black/30"></div>
      <div class="absolute inset-0 bg-gradient-to-r from-arena-black/60 to-transparent"></div>
      <!-- Red Glow -->
      <div class="absolute inset-0 bg-gradient-to-tr from-arena-red/20 via-transparent to-transparent"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-6 py-20 w-full">
      <!-- Back Link -->
      <a href="/" class="inline-flex items-center gap-2 text-white/60 hover:text-white mb-8 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        <span>Home</span>
      </a>

      <!-- Badge -->
      <div class="flex items-center gap-3 mb-6 flex-wrap">
        <span class="px-4 py-2 text-sm uppercase tracking-wider font-medium bg-arena-red text-white">Al coperto</span>
        <span class="px-4 py-2 text-sm uppercase tracking-wider font-medium bg-white/10 text-white">1000+ posti</span>
        <span class="px-4 py-2 text-sm uppercase tracking-wider font-medium bg-white/10 text-white">Dal 2012</span>
      </div>

      <!-- Title -->
      <h1 class="font-display text-5xl sm:text-7xl md:text-8xl tracking-wider text-white mb-6">
        PALAFORUM<br />
        <span class="text-arena-red">GIUSEPPE BELLAVIA</span>
      </h1>
      <p class="text-lg text-white/60 max-w-2xl mb-8">
        Un vero gioiello per chi ama arte e spettacolo. Acustica eccellente, attrezzature professionali, sedute comode e illuminazione avanzata.
      </p>

      <!-- CTA -->
      <a
        href="/palaforum/eventi"
        class="inline-flex items-center gap-3 px-8 py-4 bg-arena-red hover:bg-arena-red-glow text-white font-medium tracking-wider uppercase transition-colors"
      >
        <span>Vedi gli Eventi</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </section>

  <!-- Info Section -->
  <section class="py-24 md:py-32 bg-arena-black">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Text Content -->
        <div>
          <span class="reveal text-arena-red text-sm tracking-[0.3em] uppercase mb-4 block">La Struttura</span>
          <h2 class="reveal reveal-delay-1 font-display text-4xl md:text-6xl tracking-wider text-white mb-8">
            ECCELLENZA<br />
            <span class="text-arena-red">& COMFORT</span>
          </h2>
          <p class="reveal reveal-delay-2 text-white/60 text-lg leading-relaxed mb-6">
            Il Palaforum Giuseppe Bellavia è una struttura moderna e versatile, ideale per concerti,
            spettacoli teatrali, congressi, fiere e eventi aziendali. La sua architettura con tetto ad arco
            garantisce un'acustica eccezionale.
          </p>
          <p class="reveal reveal-delay-2 text-white/60 text-lg leading-relaxed mb-8">
            Dotato di attrezzature professionali all'avanguardia, sedute comode e un sistema di illuminazione
            avanzato, il Palaforum offre un'esperienza di alto livello per artisti e pubblico.
          </p>

          <!-- Features List -->
          <ul class="reveal reveal-delay-3 space-y-4 mb-8">
            <li class="flex items-center gap-3 text-white/70">
              <svg class="w-5 h-5 text-arena-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Acustica eccellente per ogni tipo di evento</span>
            </li>
            <li class="flex items-center gap-3 text-white/70">
              <svg class="w-5 h-5 text-arena-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Attrezzature professionali audio e luci</span>
            </li>
            <li class="flex items-center gap-3 text-white/70">
              <svg class="w-5 h-5 text-arena-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Climatizzazione per eventi tutto l'anno</span>
            </li>
            <li class="flex items-center gap-3 text-white/70">
              <svg class="w-5 h-5 text-arena-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Accessibilità per persone con disabilità</span>
            </li>
          </ul>

          <!-- Stats -->
          <div class="reveal reveal-delay-3 grid grid-cols-3 gap-8">
            <div>
              <span class="font-display text-4xl md:text-5xl text-arena-red">1000+</span>
              <p class="text-white/50 text-sm mt-1">Posti</p>
            </div>
            <div>
              <span class="font-display text-4xl md:text-5xl text-arena-red">10+</span>
              <p class="text-white/50 text-sm mt-1">Eventi/Anno</p>
            </div>
            <div>
              <span class="font-display text-4xl md:text-5xl text-arena-red">2012</span>
              <p class="text-white/50 text-sm mt-1">Anno Apertura</p>
            </div>
          </div>
        </div>

        <!-- Image Gallery Preview -->
        <div class="reveal reveal-delay-2 grid grid-cols-2 gap-4">
          <div class="aspect-[3/4] relative overflow-hidden group">
            <img
              src="/images/palaforum-gallery/IMG_5283.jpg"
              alt="Palaforum interno"
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div class="absolute inset-0 border border-arena-red/20"></div>
          </div>
          <div class="aspect-[3/4] relative overflow-hidden mt-8 group">
            <img
              src="/images/palaforum-gallery/IMG_5300.jpg"
              alt="Palaforum interno"
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div class="absolute inset-0 border border-arena-red/20"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-24 md:py-32 bg-arena-dark">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <span class="reveal text-arena-red text-sm tracking-[0.3em] uppercase mb-4 block">Caratteristiche</span>
        <h2 class="reveal reveal-delay-1 font-display text-4xl md:text-6xl tracking-wider text-white">
          VERSATILITÀ<br />
          <span class="text-arena-red">TOTALE</span>
        </h2>
      </div>

      <div class="reveal reveal-delay-2 grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="p-6 bg-arena-gray border border-white/5 text-center">
          <div class="w-16 h-16 bg-arena-red/10 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-arena-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
            </svg>
          </div>
          <h4 class="font-display text-lg tracking-wider text-white mb-2">CONCERTI</h4>
          <p class="text-white/50 text-sm">Musica live con acustica perfetta</p>
        </div>

        <div class="p-6 bg-arena-gray border border-white/5 text-center">
          <div class="w-16 h-16 bg-arena-red/10 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-arena-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h4 class="font-display text-lg tracking-wider text-white mb-2">TEATRO</h4>
          <p class="text-white/50 text-sm">Spettacoli teatrali e performance</p>
        </div>

        <div class="p-6 bg-arena-gray border border-white/5 text-center">
          <div class="w-16 h-16 bg-arena-red/10 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-arena-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h4 class="font-display text-lg tracking-wider text-white mb-2">CONGRESSI</h4>
          <p class="text-white/50 text-sm">Meeting e conferenze aziendali</p>
        </div>

        <div class="p-6 bg-arena-gray border border-white/5 text-center">
          <div class="w-16 h-16 bg-arena-red/10 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-arena-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
          </div>
          <h4 class="font-display text-lg tracking-wider text-white mb-2">FIERE</h4>
          <p class="text-white/50 text-sm">Esposizioni ed eventi fieristici</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery Section -->
  <section class="py-24 md:py-32 bg-arena-black">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <span class="reveal text-arena-red text-sm tracking-[0.3em] uppercase mb-4 block">Immagini</span>
        <h2 class="reveal reveal-delay-1 font-display text-4xl md:text-6xl tracking-wider text-white">
          GALLERIA
        </h2>
      </div>

      <div class="reveal reveal-delay-2 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4" id="gallery-grid">
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="0">
          <img src="/images/palaforum-gallery/IMG_5283.jpg" alt="Palaforum" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="1">
          <img src="/images/palaforum-gallery/IMG_5300.jpg" alt="Palaforum" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="2">
          <img src="/images/palaforum-gallery/IMG_5302.jpg" alt="Palaforum" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="3">
          <img src="/images/palaforum-gallery/IMG_5298.jpg" alt="Palaforum" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="4">
          <img src="/images/palaforum-gallery/IMG_3001.jpg" alt="Palaforum" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="5">
          <img src="/images/palaforum-gallery/IMG_5259.jpg" alt="Palaforum" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="6">
          <img src="/images/palaforum-gallery/IMG_5273.jpg" alt="Palaforum" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="7">
          <img src="/images/palaforum-gallery/IMG_5305.jpg" alt="Palaforum" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="8">
          <img src="/images/palaforum-gallery/E.B.jpg" alt="Palaforum evento" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="9">
          <img src="/images/palaforum-gallery/reepyk-200662.jpg" alt="Palaforum evento" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="10">
          <img src="/images/palaforum-gallery/reepyk-201346.jpg" alt="Palaforum evento" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="11">
          <img src="/images/palaforum-gallery/reepyk-208615.jpg" alt="Palaforum evento" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="12">
          <img src="/images/palaforum-gallery/reepyk-208616.jpg" alt="Palaforum evento" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="13">
          <img src="/images/palaforum-gallery/reepyk-208618.jpg" alt="Palaforum evento" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="14">
          <img src="/images/palaforum-gallery/reepyk-208621.jpg" alt="Palaforum evento" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="15">
          <img src="/images/palaforum-gallery/reepyk-208624.jpg" alt="Palaforum evento" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="16">
          <img src="/images/palaforum-gallery/reepyk-208626.jpg" alt="Palaforum evento" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="17">
          <img src="/images/palaforum-gallery/reepyk-208628.jpg" alt="Palaforum evento" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="18">
          <img src="/images/palaforum-gallery/reepyk-208629.jpg" alt="Palaforum evento" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
        <div class="gallery-thumb aspect-square overflow-hidden group cursor-pointer" data-index="19">
          <img src="/images/palaforum-gallery/reepyk-209887.jpg" alt="Palaforum evento" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />
        </div>
      </div>

      <!-- Lightbox Slider -->
      <div id="lightbox" class="fixed inset-0 z-[300] bg-black/95 hidden items-center justify-center">
        <!-- Close Button -->
        <button id="lightbox-close" class="absolute top-6 right-6 z-10 w-12 h-12 flex items-center justify-center text-white/70 hover:text-white transition-colors">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>

        <!-- Counter -->
        <div class="absolute top-6 left-6 z-10 text-white/50 text-sm tracking-wider">
          <span id="lightbox-counter"></span>
        </div>

        <!-- Prev Button -->
        <button id="lightbox-prev" class="absolute left-4 md:left-8 z-10 w-12 h-12 flex items-center justify-center text-white/50 hover:text-white transition-colors">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
        </button>

        <!-- Image -->
        <div class="w-full h-full flex items-center justify-center px-16 md:px-24 py-20">
          <img id="lightbox-img" src="" alt="" class="max-w-full max-h-full object-contain transition-opacity duration-300" />
        </div>

        <!-- Next Button -->
        <button id="lightbox-next" class="absolute right-4 md:right-8 z-10 w-12 h-12 flex items-center justify-center text-white/50 hover:text-white transition-colors">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </button>
      </div>
    </div>
  </section>

  <!-- Upcoming Events Section -->
  {displayEvents.length > 0 && (
    <section class="py-24 md:py-32 bg-arena-dark">
      <div class="max-w-7xl mx-auto px-6">
        <!-- Section Header -->
        <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-16">
          <div class="reveal">
            <span class="text-arena-red text-sm tracking-[0.3em] uppercase mb-4 block">Prossimi</span>
            <h2 class="font-display text-4xl md:text-6xl tracking-wider text-white">
              EVENTI<br />
              <span class="text-arena-red">PALAFORUM</span>
            </h2>
          </div>
          <a
            href="/palaforum/eventi"
            class="reveal reveal-delay-1 group flex items-center gap-3 text-white/70 hover:text-arena-red transition-colors"
          >
            <span class="tracking-wider uppercase text-sm">Tutti gli eventi</span>
            <svg class="w-5 h-5 transform group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>

        <!-- Events Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {displayEvents.map((event, index) => (
            <div class={`reveal reveal-delay-${index + 1}`}>
              <EventCard
                id={event.slug}
                artist={event.artist}
                tour={event.tour}
                dateDisplay={event.dateDisplay}
                image={event.image}
                status={event.status as 'on-sale' | 'coming-soon' | 'sold-out' | 'past'}
                venue={event.venue}
                showVenueBadge={false}
                ticketOne={event.ticketOne}
                ticketZeta={event.ticketZeta}
              />
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Map Section -->
  <section class="py-24 md:py-32 bg-arena-dark">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="reveal">
          <span class="text-arena-red text-sm tracking-[0.3em] uppercase mb-4 block">Dove Siamo</span>
          <h2 class="font-display text-4xl md:text-6xl tracking-wider text-white mb-6">
            COME<br />
            <span class="text-arena-red">ARRIVARE</span>
          </h2>
          <div class="space-y-4 text-white/60">
            <p class="flex items-start gap-3">
              <svg class="w-6 h-6 text-arena-red flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span>
                <strong class="text-white">Indirizzo:</strong><br />
                Via Esa Chimento<br />
                92100 Agrigento AG
              </span>
            </p>
            <p class="flex items-start gap-3">
              <svg class="w-6 h-6 text-arena-red flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
              </svg>
              <span>
                <strong class="text-white">Parcheggio:</strong><br />
                Parcheggio gratuito disponibile
              </span>
            </p>
