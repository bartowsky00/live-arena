---
import Layout from '../layouts/Layout.astro';
import EventCard from '../components/EventCard.astro';
import { getUpcoming } from '../lib/events';

const allUpcoming = await getUpcoming();
const upcomingEvents = allUpcoming.slice(0, 4);
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Video Background -->
    <div class="absolute inset-0">
      <video
        autoplay
        muted
        loop
        playsinline
        class="w-full h-full object-cover"
        poster="/images/event-crowd.jpg"
      >
        <source src="/videos/crowd-singing.mp4" type="video/mp4" />
      </video>
      <!-- Overlay -->
      <div class="absolute inset-0 bg-gradient-to-b from-arena-black/70 via-arena-black/50 to-arena-black"></div>
      <!-- Red Glow -->
      <div class="absolute inset-0 bg-gradient-to-tr from-arena-red/20 via-transparent to-transparent"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 text-center px-6 max-w-5xl mx-auto">
      <!-- Decorative Line -->
      <div class="flex items-center justify-center gap-4 mb-8 animate-fade-in">
        <div class="w-16 h-px bg-gradient-to-r from-transparent to-arena-red"></div>
        <span class="text-arena-red text-sm tracking-[0.3em] uppercase">Agrigento, Sicilia</span>
        <div class="w-16 h-px bg-gradient-to-l from-transparent to-arena-red"></div>
      </div>

      <!-- Main Title -->
      <h1 class="font-display text-4xl sm:text-6xl md:text-7xl lg:text-8xl tracking-wider mb-6 animate-fade-up" style="animation-delay: 0.2s;">
        <span class="text-white">FONDAZIONE TEATRO</span><br />
        <span class="text-arena-red relative">
          VALLE DEI TEMPLI
          <span class="absolute -inset-4 bg-arena-red/20 blur-3xl -z-10 animate-glow-pulse"></span>
        </span>
      </h1>

      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-white/70 max-w-2xl mx-auto mb-12 animate-fade-up" style="animation-delay: 0.4s;">
        Due palcoscenici unici nella terra degli Dei.<br class="hidden md:block" />
        Concerti e spettacoli indimenticabili ad Agrigento.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-up" style="animation-delay: 0.6s;">
        <a
          href="#venues"
          class="group relative px-8 py-4 bg-arena-red hover:bg-arena-red-glow text-white font-medium tracking-wider uppercase transition-all duration-300 overflow-hidden"
        >
          <span class="relative z-10">Scopri le Venue</span>
          <div class="absolute inset-0 bg-white/20 translate-x-full group-hover:translate-x-0 transition-transform duration-300"></div>
        </a>
        <a
          href="#eventi"
          class="px-8 py-4 border border-white/20 hover:border-arena-red text-white font-medium tracking-wider uppercase transition-colors duration-300"
        >
          Prossimi Eventi
        </a>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <div class="w-6 h-10 border-2 border-white/30 rounded-full flex justify-center pt-2">
        <div class="w-1 h-3 bg-arena-red rounded-full animate-pulse"></div>
      </div>
    </div>
  </section>

  <!-- Venues Section -->
  <section id="venues" class="py-24 md:py-32 bg-arena-dark relative overflow-hidden">
    <!-- Background Decoration -->
    <div class="absolute top-0 left-0 w-1/2 h-full bg-gradient-to-r from-arena-red/5 to-transparent pointer-events-none"></div>

    <div class="max-w-7xl mx-auto px-6 relative">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <span class="reveal text-arena-red text-sm tracking-[0.3em] uppercase mb-4 block">Le Nostre</span>
        <h2 class="reveal reveal-delay-1 font-display text-5xl md:text-7xl tracking-wider text-white">
          VENUE
        </h2>
        <p class="reveal reveal-delay-2 text-white/60 text-lg max-w-2xl mx-auto mt-6">
          Due location straordinarie per ogni tipo di evento: dalla musica live al teatro, dai congressi alle fiere.
        </p>
      </div>

      <!-- Venue Cards -->
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Live Arena Card -->
        <a href="/live-arena" class="reveal reveal-delay-1 group relative overflow-hidden block">
          <div class="aspect-[4/3] relative">
            <img
              src="/images/concert-3.jpg"
              alt="Live Arena"
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-arena-black via-arena-black/60 to-transparent"></div>
            <div class="absolute inset-0 bg-arena-red/0 group-hover:bg-arena-red/20 transition-colors duration-500"></div>

            <!-- Content -->
            <div class="absolute bottom-0 left-0 right-0 p-8">
              <div class="flex items-center gap-3 mb-4">
                <span class="px-3 py-1.5 text-xs uppercase tracking-wider font-medium bg-arena-red text-white">All'aperto</span>
                <span class="px-3 py-1.5 text-xs uppercase tracking-wider font-medium bg-white/10 text-white">4000+ posti</span>
              </div>
              <h3 class="font-display text-4xl md:text-5xl tracking-wider text-white mb-3">
                LIVE ARENA
              </h3>
              <p class="text-white/60 mb-4 max-w-md">
                Il palcoscenico all'aperto per i grandi concerti estivi, immerso nella splendida cornice della Piana Chimento.
              </p>
              <div class="flex items-center gap-2 text-arena-red group-hover:text-arena-red-glow transition-colors">
                <span class="tracking-wider uppercase font-medium text-sm">Scopri Live Arena</span>
                <svg class="w-5 h-5 transform group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </div>
          </div>
        </a>

        <!-- Palaforum Card -->
        <a href="/palaforum" class="reveal reveal-delay-2 group relative overflow-hidden block">
          <div class="aspect-[4/3] relative">
            <img
              src="/images/palaforum-interior-1.jpg"
              alt="Palaforum Giuseppe Bellavia"
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-arena-black via-arena-black/60 to-transparent"></div>
            <div class="absolute inset-0 bg-violet-600/0 group-hover:bg-violet-600/20 transition-colors duration-500"></div>

            <!-- Content -->
            <div class="absolute bottom-0 left-0 right-0 p-8">
              <div class="flex items-center gap-3 mb-4">
                <span class="px-3 py-1.5 text-xs uppercase tracking-wider font-medium bg-violet-600 text-white">Al coperto</span>
                <span class="px-3 py-1.5 text-xs uppercase tracking-wider font-medium bg-white/10 text-white">Tutto l'anno</span>
              </div>
              <h3 class="font-display text-4xl md:text-5xl tracking-wider text-white mb-3">
                PALAFORUM
              </h3>
              <p class="text-white/60 mb-4 max-w-md">
                Un vero gioiello per chi ama arte e spettacolo. Acustica eccellente, attrezzature professionali e massimo comfort.
              </p>
              <div class="flex items-center gap-2 text-violet-400 group-hover:text-violet-300 transition-colors">
                <span class="tracking-wider uppercase font-medium text-sm">Scopri Palaforum</span>
                <svg class="w-5 h-5 transform group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </div>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Upcoming Events Section -->
  <section id="eventi" class="py-24 md:py-32 bg-arena-black relative">
    <!-- Background Decoration -->
    <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-arena-red/5 to-transparent pointer-events-none"></div>

    <div class="max-w-7xl mx-auto px-6 relative">
      <!-- Section Header -->
      <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-16">
        <div class="reveal">
          <span class="text-arena-red text-sm tracking-[0.3em] uppercase mb-4 block">Non perdere</span>
          <h2 class="font-display text-5xl md:text-7xl tracking-wider text-white">
            PROSSIMI<br />
            <span class="text-arena-red">EVENTI</span>
          </h2>
        </div>
        <div class="reveal reveal-delay-1 flex flex-col sm:flex-row gap-4">
          <a
            href="/live-arena/eventi"
            class="group flex items-center gap-3 text-white/70 hover:text-arena-red transition-colors"
          >
            <span class="tracking-wider uppercase text-sm">Eventi Live Arena</span>
            <svg class="w-5 h-5 transform group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a
            href="/palaforum/eventi"
            class="group flex items-center gap-3 text-white/70 hover:text-violet-400 transition-colors"
          >
            <span class="tracking-wider uppercase text-sm">Eventi Palaforum</span>
            <svg class="w-5 h-5 transform group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Events Grid -->
      {upcomingEvents.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {upcomingEvents.map((event, index) => (
            <div class={`reveal reveal-delay-${index + 1}`}>
              <EventCard
                id={event.slug}
                artist={event.artist}
                tour={event.tour}
                dateDisplay={event.dateDisplay}
                image={event.image}
                status={event.status as 'on-sale' | 'coming-soon' | 'sold-out' | 'past'}
                venue={event.venue}
                showVenueBadge={true}
              />
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <p class="text-white/50 text-lg">Nessun evento in programma al momento.</p>
          <p class="text-white/30 mt-2">Torna presto per scoprire i prossimi concerti!</p>
        </div>
      )}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 md:py-32 bg-arena-dark relative">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="reveal font-display text-4xl md:text-6xl tracking-wider text-white mb-6">
        PRONTO PER<br />
        <span class="text-arena-red">L'ESPERIENZA?</span>
      </h2>
      <p class="reveal reveal-delay-1 text-white/60 text-lg mb-10 max-w-2xl mx-auto">
        Non perdere i prossimi eventi della Fondazione Teatro Valle dei Templi. Iscriviti alla newsletter per rimanere aggiornato
        su concerti, date e promozioni esclusive.
      </p>

      <!-- Newsletter Form -->
      <form class="reveal reveal-delay-2 flex flex-col sm:flex-row gap-4 max-w-lg mx-auto" id="newsletter-form">
        <input
          type="email"
          id="newsletter-email"
          placeholder="La tua email"
          class="flex-1 px-6 py-4 bg-arena-gray border border-white/10 text-white placeholder:text-white/30 focus:outline-none focus:border-arena-red transition-colors"
          required
        />
        <button
          type="submit"
          id="newsletter-btn"
          class="px-8 py-4 bg-arena-red hover:bg-arena-red-glow text-white font-medium tracking-wider uppercase transition-colors"
        >
          Iscriviti
        </button>
      </form>
      <p id="newsletter-success" class="hidden mt-4 text-green-400 text-center">Iscrizione completata! Grazie.</p>
      <p id="newsletter-error" class="hidden mt-4 text-arena-red text-center">Errore durante l'iscrizione. Riprova.</p>
    </div>
  </section>
</Layout>

<script>
  const form = document.getElementById('newsletter-form') as HTMLFormElement;
  const emailInput = document.getElementById('newsletter-email') as HTMLInputElement;
  const btn = document.getElementById('newsletter-btn') as HTMLButtonElement;
  const successMsg = document.getElementById('newsletter-success');
  const errorMsg = document.getElementById('newsletter-error');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const email = emailInput.value.trim();
    if (!email) return;

    btn.textContent = 'Invio...';
    btn.disabled = true;
    successMsg?.classList.add('hidden');
    errorMsg?.classList.add('hidden');

    try {
      const response = await fetch('https://emailoctopus.com/api/1.6/lists/77c0c066-ff68-11f0-9e75-6de7a11dbc02/contacts', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          api_key: 'eo_a05824f95a07d86c527b2f28afb61e1d2dc9562d26b0d9c31b37c0963e53ad6d',
          email_address: email,
          status: 'SUBSCRIBED'
        })
      });

      if (response.ok || response.status === 200 || response.status === 201) {
        form.classList.add('hidden');
        successMsg?.classList.remove('hidden');
      } else {
        const data = await response.json();
        if (data.error?.code === 'MEMBER_EXISTS_WITH_EMAIL_ADDRESS') {
          form.classList.add('hidden');
          successMsg?.classList.remove('hidden');
          if (successMsg) successMsg.textContent = 'Sei gi√† iscritto alla newsletter!';
        } else {
          throw new Error(data.error?.message || 'Errore');
        }
      }
    } catch (error) {
      errorMsg?.classList.remove('hidden');
      btn.textContent = 'Iscriviti';
      btn.disabled = false;
    }
  });
</script>

<style>
  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-up {
    animation: fadeUp 0.8s ease-out forwards;
    opacity: 0;
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes glowPulse {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.6; }
  }

  .animate-glow-pulse {
    animation: glowPulse 3s ease-in-out infinite;
  }
</style>
